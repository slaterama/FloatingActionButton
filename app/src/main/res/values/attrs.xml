<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Button color for RoundedButton. -->
	<attr name="roundedBtnColor" format="color" />
	<!-- Corner radius for RoundedButton. -->
	<attr name="roundedBtnCornerRadius" format="dimension" />
	<!-- Elevation for RoundedButton. -->
	<attr name="roundedBtnElevation" format="dimension" />
	<!-- Maximum Elevation for RoundedButton. -->
	<attr name="roundedBtnMaxElevation" format="dimension" />
	<!-- Add padding in API v21+ as well to have the same measurements with previous
	versions. -->
	<attr name="roundedBtnUseCompatPadding" format="boolean" />
	<!-- Add padding to RoundedButton on v20 and before to prevent intersections between
	the Card content and rounded corners. -->
	<attr name="roundedBtnPreventCornerOverlap" format="boolean" />
	<!-- Inner padding between the edges of the RoundedButton and children of the
	RoundedButton. -->
	<attr name="roundedBtnContentPadding" format="dimension" />
	<!-- Inner padding between the left edge of the RoundedButton and children of the
	RoundedButton. -->
	<attr name="roundedBtnContentPaddingLeft" format="dimension" />
	<!-- Inner padding between the right edge of the RoundedButton and children of the
	RoundedButton. -->
	<attr name="roundedBtnContentPaddingRight" format="dimension" />
	<!-- Inner padding between the top edge of the RoundedButton and children of the
	RoundedButton. -->
	<attr name="roundedBtnContentPaddingTop" format="dimension" />
	<!-- Inner padding between the bottom edge of the RoundedButton and children of the
	RoundedButton. -->
	<attr name="roundedBtnContentPaddingBottom" format="dimension" />

	<declare-styleable name="RoundedImageButton">
		<attr name="roundedBtnColor" />
		<attr name="roundedBtnCornerRadius" />
		<attr name="roundedBtnElevation" />
		<attr name="roundedBtnMaxElevation" />
		<attr name="roundedBtnUseCompatPadding" />
		<attr name="roundedBtnPreventCornerOverlap" />
		<attr name="roundedBtnContentPadding" />
		<attr name="roundedBtnContentPaddingLeft" />
		<attr name="roundedBtnContentPaddingRight" />
		<attr name="roundedBtnContentPaddingTop" />
		<attr name="roundedBtnContentPaddingBottom" />
	</declare-styleable>

	<declare-styleable name="FloatingActionButton">
		<!-- Button color for FloatingActionButton. -->
		<attr name="fabColor" format="color" />
		<!-- Corner radius for FloatingActionButton. -->
		<attr name="fabCornerRadius" format="dimension" />
		<!-- Elevation for FloatingActionButton. -->
		<attr name="fabElevation" format="dimension" />
		<!-- Maximum Elevation for FloatingActionButton. -->
		<attr name="fabMaxElevation" format="dimension" />
		<!-- Add padding in API v21+ as well to have the same measurements with previous
		versions. -->
		<attr name="fabUseCompatPadding" format="boolean" />
		<!-- Add padding to FloatingActionButton on v20 and before to prevent intersections between
		the Card content and rounded corners. -->
		<attr name="fabPreventCornerOverlap" format="boolean" />
		<!-- Inner padding between the edges of the FloatingActionButton and children of the
		FloatingActionButton. -->
		<attr name="fabContentPadding" format="dimension" />
		<!-- Inner padding between the left edge of the FloatingActionButton and children of the
		FloatingActionButton. -->
		<attr name="fabContentPaddingLeft" format="dimension" />
		<!-- Inner padding between the right edge of the FloatingActionButton and children of the
		FloatingActionButton. -->
		<attr name="fabContentPaddingRight" format="dimension" />
		<!-- Inner padding between the top edge of the FloatingActionButton and children of the
		FloatingActionButton. -->
		<attr name="fabContentPaddingTop" format="dimension" />
		<!-- Inner padding between the bottom edge of the FloatingActionButton and children of the
		FloatingActionButton. -->
		<attr name="fabContentPaddingBottom" format="dimension" />
	</declare-styleable>

	<!-- Normal RoundedImageButton style. -->
	<attr name="roundedImageButtonStyle" format="reference" />

	<!-- Normal FloatingActionButton style. -->
	<attr name="floatingActionButtonStyle" format="reference" />

	<!-- Small FloatingActionButton style. -->
	<attr name="smallFloatingActionButtonStyle" format="reference" />

</resources>